@page
@model EXWHYZEE.LGT.Areas.AdminPage.Pages.StatePanel.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-header">
        <h3>All States (@Model.State.Count())</h3>


    </div>
    <div class="card-body">



        <div class="datatable-scroll">
            <table class="table datatable-show-all dataTable no-footer table-bordered" id="DataTables_Table_0">

                <thead>
                    <tr>
                        <th>S/N</th>
                        <th>
                           State
                        </th>
                        <th>L G A</th>
                    </tr>
                </thead>
                @{
                    int sno = 0;
                }
                <tbody>
                    @foreach (var item in Model.State)
                    {
                        <tr>
                            <td>
                                @{ sno++; }
                                @sno
                            </td>
                            <td>
                                <a asp-page="./Edit" asp-route-id="@item.Id">
                                    @Html.DisplayFor(modelItem => item.Title)
                                </a>
                            </td>
                            <td>
                                <a asp-page="/LgaPanel/LgaState" asp-route-id="@item.Id">
                                    @item.LocalGovernments.Count()
                                    </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>        </div>            </div>