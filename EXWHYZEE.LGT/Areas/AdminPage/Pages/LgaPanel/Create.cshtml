@page
@model EXWHYZEE.LGT.Areas.AdminPage.Pages.LgaPanel.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="card">
    <div class="card-header">
        <h4>New Local Government for @Model.State.Title</h4>
        <a asp-page="./Index" class="btn btn-danger" style="float:right;">Back to List</a>

    </div>
    <div class="card-body">


        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="LocalGovernment.StateId" hidden="hidden" value="@Model.State.Id" />
                    <div class="form-group">
                        <label asp-for="LocalGovernment.Name" class="control-label"></label>
                        <input asp-for="LocalGovernment.Name" class="form-control" />
                        <span asp-validation-for="LocalGovernment.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LocalGovernment.Description" class="control-label"></label>
                        <input asp-for="LocalGovernment.Description" class="form-control" />
                        <span asp-validation-for="LocalGovernment.Description" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
