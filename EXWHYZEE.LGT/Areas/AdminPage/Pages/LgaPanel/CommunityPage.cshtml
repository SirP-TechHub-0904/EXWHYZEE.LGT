@page
@model EXWHYZEE.LGT.Areas.AdminPage.Pages.LgaPanel.CommunityPageModel

@{
    ViewData["Title"] = "CommunityPage";
}


<div class="card">
    <div class="card-header">
        <h3>All Communities in @Model.LGA.Name (@Model.Community.Count())</h3>

        <a asp-page="./CreateCommunity" asp-route-id="@Model.LGA.Id" class=" btn btn-danger">Add New Community</a>
        <a asp-page="/LgaPanel/Index" class="btn btn-danger" style="float:right;">Back to List</a>

    </div>
    <div class="card-body">



        <div class="datatable-scroll">
            <table class="table datatable-show-all dataTable no-footer table-bordered" id="DataTables_Table_0">

                <thead>
                    <tr>
                        <th>S/N</th>

                        <th>
                            @Html.DisplayNameFor(model => model.Community[0].Title)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Community[0].Populations)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Community[0].Male)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Community[0].Female)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Community[0].SelfEmployed)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Community[0].Employed)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Community[0].UnEmployed)
                        </th>

                        <th>Mineral Resources</th>
                    </tr>
                </thead>
                @{
                    int sno = 0;
                }
                <tbody>
                    @foreach (var item in Model.Community)
                    {
                        <tr>
                            <td>
                                @{ sno++; }
                                @sno
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Populations)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Male)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Female)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SelfEmployed)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Employed)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UnEmployed)
                            </td>

                            <td>
                                <a asp-page="./CommunityResources" asp-route-id="@item.Id">

                                    @item.MineralResources.Count()

                                    </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>        </div>            </div>