@page
@model EXWHYZEE.LGT.Areas.AdminPage.Pages.LgaPanel.CommunityResourcesModel

@{
    ViewData["Title"] = "CommunityResources";
}

<div class="card">
    <div class="card-header">
        <h3>All Mineral Resource in @Model.Community.Title (@Model.MineralResource.Count())</h3>

        <a asp-page="./CreateMS" asp-route-id="@Model.Community.Id" class=" btn btn-danger">Add New Mineral Resources</a>
        <a asp-page="/LgaPanel/CommunityPage" class="btn btn-danger" style="float:right;">Back to List</a>

    </div>
    <div class="card-body">



        <div class="datatable-scroll">
            <table class="table datatable-show-all dataTable no-footer table-bordered" id="DataTables_Table_0">

                <thead>
                    <tr>
                        <th>
                            S/N
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MineralResource[0].Title)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.MineralResource[0].StartDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MineralResource[0].EndDate)
                        </th>

                    </tr>
                </thead>

                @{
                    int sno = 0;
                }
                <tbody>
                    @foreach (var item in Model.MineralResource)
                    {
                        <tr>
                            <td>
                                @{ sno++; }
                                @sno
                            </td>

                            <td>
                                <a>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </a>
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EndDate)
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>        </div>            </div>