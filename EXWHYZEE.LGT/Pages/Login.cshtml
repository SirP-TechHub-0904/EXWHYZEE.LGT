@page
@model EXWHYZEE.LGT.Pages.LoginModel
@{
    Layout = null;
}





<!DOCTYPE html>
<!-- saved from url=(0099)https://storage.googleapis.com/theme-vessel-items/checking-sites/oddo-2-html/HTML/main/login-8.html -->
<html lang="zxx">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>Login - Local Governace ToolBox</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- External CSS libraries -->
    <link type="text/css" rel="stylesheet" href="/loginfile/bootstrap.min.css">
    <link type="text/css" rel="stylesheet" href="/loginfile/font-awesome.min.css">
    <link type="text/css" rel="stylesheet" href="/loginfile/flaticon.css">

    <!-- Favicon icon -->
    <link rel="shortcut icon" href="https://storage.googleapis.com/theme-vessel-items/checking-sites/oddo-2-html/HTML/main/assets/img/favicon.ico" type="image/x-icon">

    <!-- Google fonts -->
    <link href="/loginfile/css2" rel="stylesheet">

    <!-- Custom Stylesheet -->
    <link type="text/css" rel="stylesheet" href="/loginfile/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .bg {
            /* The image used */
            background-image: url("../img/bg6.jpg");
            /* Full height */
            height: 100%;
            /* Center and scale the image nicely */
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
</head>
<body id="top" data-new-gr-c-s-check-loaded="14.1055.0" data-gr-ext-installed="" class="bg">
    <div class="page_loader"></div>

    <!-- Login 8 start -->
    <div class="login-8">
        <div class="container">
            <div class="row login-box">
                <div class="col-lg-7 col-md-12 form-info">
                    <div class="form-section">
                        <div class="logo clearfix">
                            <a href="">
                                <h3 style="font-weight:900;">LOCAL GOVERNMENT TOOLBOX</h3>
                            </a>
                        </div>
                        <h4>Sign Into Your Dashboard</h4>
                        <div class="login-inner-form">
                            <form method="post">
                                @if (TempData["alert"] != null)
                                {

                                    <div class="form-group form-box">
                                        <div class="alert alert-danger">
                                            <strong>Alert!</strong> @TempData["alert"]
                                        </div>

                                    </div>}
                                <div asp-validation-summary="All" class="text-danger"></div>

                                <div class="form-group form-box">
                                    <input class="form-control" asp-for="Input.Email" type="email" data-val="true" data-val-email="The Email field is not a valid e-mail address." data-val-required="The Email field is required." />
                                    <i class="fa fa-envelope"></i>
                                </div>
                                <div class="form-group form-box">
                                    <input class="form-control" asp-for="Input.Password" type="password" data-val="true" data-val-required="The Password field is required." />
                                    <i class="fa fa-lock"></i>
                                </div>
                                <div class="form-group form-box">
                                    <div class="form-check">
                                        <input type="checkbox" asp-for="Input.RememberMe" /> Remember me

                                    </div>
                                   @* <a href="/Identity/Account/ForgotPassword">Forgot Password</a>*@
                                </div>
                                <div class="form-group mb-0">
                                    <button type="submit" class="btn-md btn-theme w-100">Login</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5 col-md-12 bg-img">
                    <div class="info">

                        <div class="info-text text-center">
                            <h3 style="font-weight:900;color:#ffffff;">WELCOME TO THE LOCAL GOVERNMENT TOOLBOX</h3>
                            <p>
                                All ways and means to strengthen Local Governance towards a better Society
                            </p>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Login 8 end -->
    <!-- External JS libraries -->
    <script src="/loginfile/jquery-3.6.0.min.js"></script>
    <script src="/loginfile/bootstrap.bundle.min.js"></script>
    <script src="/loginfile/jquery.validate.min.js"></script>
    <script src="/loginfile/app.js"></script>
    <!-- Custom JS Script -->


</body>

</html>
