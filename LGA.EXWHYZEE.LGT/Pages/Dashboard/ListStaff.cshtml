@page
@model LGA.EXWHYZEE.LGT.Pages.Dashboard.ListStaffModel
@{
}
<div class="row">
    <div class="col-xs-12">
        
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">THE LOCAL GOVERNMENT STAFF @TempData["title"]</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>S/N</th>
                            <th>Fullname</th>
                            <th>Gender</th>
                            <th>AP Date</th>
                            <th>Age</th>
                        </tr>
                    </thead>
                    @{
                        int sno = 0;
                    }
                <tbody>
                    @foreach (var item in Model.LgaStaff)
                    {
                        <tr>
                            <td>
                                @{ sno++; }
                                @sno
                            </td>
                            <td>@item.User.FullName</td>
                            <td>
                               @item.User.Gender
                            </td>
                            <td>@item.EmploymentDate</td>
                            <td> @item.User.Age</td>
                        </tr>

                                    }

                    </tbody>
                   
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>